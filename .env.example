# Core application settings
APP_NAME="Chorus Stage"
APP_VERSION="0.1.0"
ADMIN_EMAIL="admin@example.com"

SECRET_KEY=CHANGE_ME
DEBUG=false
ASCII_ART_ENABLED=true
ASCII_ART_LINE_DELAY=0.05

# Database configuration
SQL_DEBUG=false

# Postgres
POSTGRES_USER="chorus_live"
POSTGRES_PASSWORD="secure_live_password"
POSTGRES_DB="chorus_live"

POSTGRES_TEST_USER="chorus_testing"
POSTGRES_TEST_PASSWORD="random_testing_password"
POSTGRES_TEST_DB="chorus_testing"

# Redis
REDIS_URL=redis://localhost:6379

# Monitoring
GRAFANA_PASSWORD="grafana"

# Authentication / crypto
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200
LOGIN_CHALLENGE=test_nonce_value

# Proof-of-work difficulties
POW_DIFFICULTY_POST=20
POW_DIFFICULTY_VOTE=15
POW_DIFFICULTY_MESSAGE=18
POW_DIFFICULTY_MODERATE=16
POW_DIFFICULTY_REGISTER=18
POW_DIFFICULTY_LOGIN=16

# Adaptive PoW leases (UX smoothing)
POW_ENABLE_LEASES=true
POW_LEASE_SECONDS=120
POW_LEASE_ACTIONS=3

# Feed / moderation tuning
RECENT_WINDOW_SIZE=50
CONTROVERSIAL_MIN_TOTAL=5
TOKEN_EPOCH_SIZE=10000
HARMFUL_HIDE_THRESHOLD=0.2
CLEAR_THRESHOLD=0.6
MODERATION_MIN_COMMUNITY_SIZE=25

# Harmful vote cool-downs (anti-harassment throttling)
HARMFUL_VOTE_AUTHOR_COOLDOWN_SECONDS=900
HARMFUL_VOTE_POST_COOLDOWN_SECONDS=120

# Moderation trigger global cool-down
MODERATION_TRIGGER_COOLDOWN_SECONDS=60

# Chorus Bridge integration
CHORUS_BRIDGE_ENABLED=false
CHORUS_BRIDGE_BASE_URL=https://bridge.local
CHORUS_BRIDGE_INSTANCE_ID=stage-local
CHORUS_BRIDGE_SHARED_SECRET=change_me_bridge
CHORUS_BRIDGE_JWT_AUD=chorus-bridge
CHORUS_BRIDGE_TOKEN_TTL_SECONDS=300
CHORUS_BRIDGE_HTTP_TIMEOUT_SECONDS=10
CHORUS_BRIDGE_PULL_INTERVAL_SECONDS=2
CHORUS_BRIDGE_MTLS_ENABLED=false
CHORUS_BRIDGE_CLIENT_CERT=
CHORUS_BRIDGE_CLIENT_KEY=
CHORUS_BRIDGE_CA_CERT=
